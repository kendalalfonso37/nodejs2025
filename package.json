{
  "name": "nodejs2025",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.ts",
  "scripts": {
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/server.js",
    "dev": "nodemon",
    "lint": "eslint -c eslint.config.mjs --ignore-pattern .gitignore src/**/*.{ts,tsx}",
    "lint:fix": "eslint -c eslint.config.mjs --ignore-pattern .gitignore src/**/*.{ts,tsx} --fix",
    "style-check": "prettier --ignore-path .gitignore --check .",
    "style-fix": "prettier --ignore-path .gitignore --write .",
    "typeorm": "typeorm-ts-node-commonjs",
    "entity:create": "npm run typeorm entity:create",
    "migration:create": "npm run typeorm migration:create",
    "migration:generate": "npm run typeorm -- -d src/app-data-source.ts migration:generate",
    "migration:run": "npm run typeorm -- -d src/app-data-source.ts migration:run",
    "migration:revert": "npm run typeorm -- -d src/app-data-source.ts migration:revert",
    "schema:sync": "npm run typeorm -- -d src/app-data-source.ts schema:sync",
    "schema:drop": "npm run typeorm -- -d src/app-data-source.ts schema:drop"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-winston": "^4.2.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-winston": "^4.0.2",
    "@types/http-status-codes": "^1.2.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.14.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  }
}
